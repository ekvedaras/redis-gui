{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
          "/@/*": [
              "./src/*"
          ]
      },
      "lib": [
          "ESNext",
          "dom",
          "dom.iterable"
      ],
      "allowSyntheticDefaultImports": true
  },

  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/types/*.d.ts"
  ]
}
